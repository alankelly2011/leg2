<%= form_for @contact, url: welcome_index_path, remote: true do |f| %>
                  
                </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.text_field  :name, required: true, class: "form-control", placeholder: "Full Name..."%></br>
                        </div>
                        
                        <div class="form-group">
                            <%= f.text_field :email, required: true, class: "form-control", placeholder: "Your Email Address..."%></br>
                        </div>
                        
                        <div class="col-lg-12 text-center">
                          <%= f.submit 'Send Message', class: 'btn btn-primary', data: { disable_with: "Submitting..."} %>
                    </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                              <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "form-control",
                                                placeholder: "Place Your Message Here..."%></br>
                        </div>
                    </div>
                    
                      <div class= "hidden">
                        <%= f.label :nickname %>
                        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
                      </div>
                      
              </div>
      </div>
            

 <% end %>

<div class="col-md-3" id="flash-message">
                <%= render 'flash' %>
            </div>