<%= render 'layouts/navbar' %>


	<div class="container">
		<div class="eventmaincontainer">
            <div class="row">
                <div class="col-lg-12 text-center">

					<h1>Editing Event</h1>
					
<div class="row">
      	<div class="col-md-4 text-center col-md-offset-4">
             	<div class="event-container">					
<%= form_for @event, html: { multipart: true } do |f| %>

  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
    <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
  	<% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
	<%= f.label :start_time %><br/>
	<%= f.select :eventtime, options_for_select([['10:30am', '10:30am'], ['11:00am', '11:00am'], ['11:30am', '11:30am'], ['12:00pm', '12:00pm'], ['12:30am', '12:30am'], ['13:00pm', '13:00pm'], 
	['13:30pm', '13:30pm'], ['14:00pm', '14:00pm'], ['14:30pm', '14:30pm'], ['15:00pm', '15:00pm'], ['15:30pm', '15:30pm'],['16:00pm', '16:00pm'], ['16:30pm', '16:30pm'], ['17:00pm', '17:00pm'], 
	['17:30pm', '17:30pm'],['18:00pm', '18:00pm'], ['18:30pm', '18:30pm'], ['19:00pm', '19:00pm'], ['19:30pm', '19:30pm'], ['20:00pm', '20:00pm'], ['20:30pm', '20:30pm'],['21:00pm', '21:00pm'], 
	['21:30pm', '21:30pm'],['22:00pm', '22:00pm'], ['22:30pm', '22:30pm'],['23:00pm', '23:00pm'], ['23:30pm', '23:30pm'], ['00:00am', '00:00am'], ['00:30pm', '00:30pm'],
	['1:00am', '1:00am']], @event.eventtime), {:prompt => ''}, {:style => 'width: 70%;'}%>
  </div>
  
  <div class="field">
  	<%= f.label :category %><br>
    <%= f.select :category, options_for_select([['Irish', 'Irish'], ['Rock', 'Rock'], ['Comedy', 'Comedy'], ['Jazz', 'Jazz'], ['DJ', 'DJ'], 
    ['Theatre', 'Theatre']], @event.category), {:prompt => ''}, {:style => 'width: 70%;'}%>
  </div>
  
  <div class="field">
    <%= f.label :location %><br>
    <%= f.select :location, options_for_select([['Kilkenny', 'Kilkenny'], ['Dublin', 'Dublin'], ['Waterford', 'Waterford'], 
    ['Cork', 'Cork']], @event.location), {:prompt => ''}, {:style => 'width: 70%;'}%>
  </div>
  
  <div class="field">
	<%= f.label :date %><br/>
	<%= f.date_field :date, :style => 'width: 70%;' %>
  </div>
 
  <div class="field">
    <%= f.label :venue_name %><br>
    <%= f.text_field :venue_name, :style => 'width: 70%;' %>
  </div>
  
  <div class="field">
    <%= f.label :artist %><br>
    <%= f.text_field :name, :style => 'width: 70%;' %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :style => 'width: 70%;', :size => '20x3' %>
  </div>
  
  <div align="center">
  	<%= f.label :image %><br> 
    <%= f.file_field :image, :style => 'width: 70%;' %>
  </div><br>
  
  <div class="actions"><%= f.submit "Update Event", class: "btn btn-xl"%></div>
  </div>
  
  <% end %>
					
					<%= link_to 'Show', @event %> |
					<%= link_to 'Back', events_path %>
			</div>
		</div>
	</div>
</div>
</div>
</div>
</div>
