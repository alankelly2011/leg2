<%= render 'layouts/resultsnav'%>
    
<!--Login Form-->

<section id="login">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">SIGN IN</h2>
                    <h3 class="section-subheading text-muted">Céad Míle Fáilte.</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    Email <%= f.email_field :email, autofocus: true %> <br><br>
  </div>

  <div class="field">
   <%= f.label :password %><br />
    Pass. <%= f.password_field :password, autocomplete: "off" %> <br><br>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %> <br><br>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "SIGN IN", class: "btn btn-xl" %> 
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>

			</div>
            </div> 
        </div>
    </section>